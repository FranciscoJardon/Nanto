<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="contenedor-beneficios">
 <div class="contenedor-titulo">
    <div class="lineas">.</div>
    <h2>{{ section.settings.titulo }}</h2>
    <div class="lineas">.</div>
</div>
<p>{{ section.settings.descripcion }}</p>
</div>

<div class="swiper sliderBeneficios">
    <div class="swiper-wrapper">

        {% for block in section.blocks %}
            <div class="swiper-slide ">
        <div class="CardBeneficio">
           <div class="ContenedorCirculo">
            <img src="{{ block.settings.Img | img_url: '600x' }}" alt="">
           </div> 
           <br>
           <br>
            <h2>
                {{ block.settings.titulo }}
            </h2>
            <p>
                {{ block.settings.descripcion}}
            </p>

        </div>
        </div>
    {% endfor %}
   
    </div>
    <div class="swiper-pagination"></div>
  </div>



<style>
    .contenedor-beneficios{
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding:2rem 0rem;
        gap:10px;
        align-items:center;
        border-radius:20px;
        margin-top:90px;
        text-align: center;
    }
    .contenedor-titulo{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
    .contenedor-titulo h2{
   width:800px;
    }
    .lineas{
        width: 100%;
        height: 2px;
        background: {{ section.settings.colorlineas }};
    }

    .sliderBeneficios{

        max-width: 1500px;
    margin: 0 auto;
    }
    .CardBeneficio{
        background: white; 
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding: 4rem 3rem;
        margin-top: 100px;
        border-radius: 20px;
    }
    .CardBeneficio h2{
        text-align: left;
    }
.ContenedorCirculo{
        width: 170px;
        height: 170px;
        border-radius: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background: white;
        align-self: center;
        margin-top: -10rem;
        z-index: 20;
}
    .ContenedorCirculo img{
        width: 150px;
        height: 150px;
        border-radius: 100%;
        object-fit: cover;
       
    }
    
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper(".sliderBeneficios", {
    slidesPerView: 1,
    spaceBetween: 10,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      768: {
        slidesPerView: 3,
        spaceBetween: 40,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 50,
      },
    },
  });
</script>
{% schema %}
    {
      "name": "beneficios",
      "class": "beneficios",
      "settings": [  
            {
              "type": "header",
              "content": "Textos"
            },
            {
              "type": "text",
              "id": "titulo",
              "label": "titulo",
              "default": "Lo mejor para tu hogar"
            },{
              "type": "text",
              "id": "descripcion",
              "label": "descripcion",
              "default": "Experimenta la innovación y el cuidado en las superficies de tu hogar que solo Nanto ofrece."
            },
            {
              "type": "color",
              "id": "colorlineas",
              "label": "Color de Lineas",
              "default": "#000000"
            }
        ],
      "blocks": [
        {
      "type": "image",
      "name": "beneficio",
      "settings": [
        {
              "type": "image_picker",
              "id": "Img",
              "label": "Imagen"
            },
            {
              "type": "text",
              "id": "titulo",
              "label": "titulo",
              "default": "ALARGA LA VIDA ÚTIL"
            },{
              "type": "text",
              "id": "descripcion",
              "label": "descripcion",
              "default": "Gracias a su acción protectora, Nanto prolonga la vida útil de tus superficies, manteniéndolas en perfecto estado por más tiempo. Dile adiós al desgaste prematuro y disfruta de un hogar siempre reluciente."
            }
      ]
    }
      ],
      "presets": [
        {
          "name": "beneficios",
          "blocks": []
        }
      ]
    }
{% endschema %}